{
    "name": "@adyen/adyen-platform-experience-web",
    "version": "1.10.0",
    "keywords": [
        "adyen",
        "adyen-pe",
        "fp",
        "finance",
        "platforms",
        "adyen-for-platforms",
        "components",
        "adyen-platform-experience"
    ],
    "license": "MIT",
    "type": "module",
    "repository": "github:Adyen/adyen-platform-experience-web",
    "apiVersion": "v1",
    "private": false,
    "bugs": {
        "url": "https://support.adyen.com/"
    },
    "files": [
        "dist/**"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "main": "./dist/cjs/index.js",
    "module": "./dist/es/index.js",
    "types": "./dist/types/index.d.ts",
    "style": "dist/style.css",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/cjs/index.js"
            },
            "import": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/es/index.js"
            }
        },
        "./adyen-platform-experience-web.css": "./dist/adyen-platform-experience-web.css"
    },
    "scripts": {
        "build": "rm -rf ./dist && vite build --config vite.config.ts && tsc --project tsconfig-build.json",
        "build:umd": "vite --mode umd build --config vite.config.ts && tsc --project tsconfig-build.json",
        "build:umd:test": "cross-env USE_TEST_CDN=true vite --mode umd build --config vite.config.ts && tsc --project tsconfig-build.json",
        "build:analyse": "vite build --mode analyse --config vite.config.ts",
        "build:publish": "npm run build && npm pack",
        "changeset": "changeset",
        "format": "prettier --write 'src/**/*.{ts,js,css,scss,html}'",
        "lint": "eslint 'src/**/*.{js,ts,tsx}' --quiet && stylelint 'src/**/*.scss' --fix",
        "schemas:generate": "bash scripts/generate-ts-schemas/generate-schemas.sh",
        "schemas:variables": "bash scripts/generate-ts-schemas/setup-openapi-ts.sh",
        "start": "npm run storybook",
        "storybook": "concurrently --kill-others-on-fail 'npm run types:watch' 'vite-node --mode development .storybook/runStorybook.ts' ",
        "storybook:build": "cross-env USE_TEST_CDN=true vite-node ./.storybook/buildStorybook.ts",
        "storybook:static": "cross-env USE_CDN=false TEST_ENV=1 vite-node --mode development ./.storybook/buildStorybook.ts && vite serve storybook-static --config vite.config.ts",
        "test": "cross-env TEST_ENV=1 vitest --config vite.config.ts",
        "test:contract": "cross-env NODE_OPTIONS='--no-experimental-strip-types' playwright test --project contract",
        "test:coverage": "vitest run --config vite.config.ts --coverage",
        "test:e2e": "cross-env TEST_ENV=1 NODE_OPTIONS='--no-experimental-strip-types' playwright test --project local-chrome-e2e",
        "test:integration": "cross-env TEST_ENV=1 NODE_OPTIONS='--no-experimental-strip-types' playwright test --project local-chrome",
        "test:integration:debug": "cross-env PWDEBUG=console TEST_ENV=1 NODE_OPTIONS='--no-experimental-strip-types' playwright test --debug --project local-chrome",
        "test:integration:ui": "npm run test:integration -- --ui",
        "translations:sort": "bash scripts/process-translations/sort-translations-json.sh",
        "types:check": "tsc --preserveWatchOutput",
        "types:watch": "tsc --preserveWatchOutput --watch && tsc --project tsconfig-build.json --watch",
        "version": "./scripts/bump-version.sh"
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "core-js": "^3.36.0"
    },
    "peerDependencies": {
        "preact": "^10.13.2"
    },
    "devDependencies": {
        "@adyen/bento-design-tokens": "^1.7.1",
        "@changesets/cli": "^2.29.7",
        "@changesets/get-github-info": "^0.6.0",
        "@playwright/test": "^1.56.0",
        "@preact/preset-vite": "^2.9.3",
        "@storybook/addon-essentials": "8.6.4",
        "@storybook/core": "8.6.4",
        "@storybook/core-server": "8.6.4",
        "@storybook/manager-api": "8.6.4",
        "@storybook/preact": "8.6.4",
        "@storybook/preact-vite": "8.6.4",
        "@storybook/types": "8.6.4",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/preact": "^3.2.3",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^20.4.7",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.8.1",
        "@vitest/coverage-v8": "3.1.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^7.0.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.11.0",
        "dotenv": "^16.4.5",
        "eslint": "^8.12.0",
        "eslint-import-resolver-typescript": "^3.5.2",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-react": "^7.26.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-testing-library": "^7.1.1",
        "file-loader": "^6.2.0",
        "http-server": "^14.1.1",
        "husky": "^7.0.4",
        "jsdom": "^26.1.0",
        "lint-staged": "^13.0.1",
        "mini-css-extract-plugin": "^2.4.5",
        "msw": "^2.4.5",
        "msw-storybook-addon": "^2.0.2",
        "openapi-typescript": "^7.6.1",
        "postcss": "^8.3.11",
        "prettier": "^3.6.2",
        "rollup-plugin-visualizer": "^5.9.0",
        "sass": "^1.77.6",
        "sass-loader": "^12.3.0",
        "storybook": "8.6.4",
        "style-loader": "^3.3.1",
        "stylelint": "^14.1.0",
        "stylelint-config-recommended": "^6.0.0",
        "stylelint-config-sass-guidelines": "^9.0.1",
        "stylelint-scss": "^4.2.0",
        "ts-loader": "^9.2.6",
        "typescript": "5.8.3",
        "vite": "^6.3.6",
        "vite-node": "^3.0.5",
        "vite-plugin-checker": "^0.5.6",
        "vite-plugin-svgr": "^4.2.0",
        "vitest": "3.1.1"
    },
    "msw": {
        "workerDirectory": [
            "static"
        ]
    }
}